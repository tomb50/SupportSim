<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:task="http://www.springframework.org/schema/task"
       xmlns:xsl="http://www.w3.org/2001/XMLSchema-instance"
       xsl:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       http://www.springframework.org/schema/task
       http://www.springframework.org/schema/task/spring-task-3.2.xsd">

       <bean id="runScheduler" class="tomb.supportsim.schedule.ScheduledTasks"/>
       <task:scheduled-tasks>
         <task:scheduled ref="runScheduler" method="createTicket" cron="*/5 * * * * *"/>
         <task:scheduled ref="runScheduler" method="assignTickets" cron="*/20 * * * * *"/>
         <task:scheduled ref="runScheduler" method="updateTickets" cron="*/30 * * * * *"/>

       </task:scheduled-tasks>

       </beans>